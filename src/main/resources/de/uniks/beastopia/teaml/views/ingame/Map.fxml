<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<GridPane pickOnBounds="false" prefHeight="600.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/19"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.beastopia.teaml.controller.ingame.MapController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="600.0" prefWidth="100.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="30.0" minHeight="100.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="30.0" minHeight="100.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <AnchorPane fx:id="anchorPane" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <Pane fx:id="mapPane"/>
    </AnchorPane>
    <Button alignment="BOTTOM_CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#closeMap"
            text="%CloseMap" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.valignment="BOTTOM"/>
</GridPane>
