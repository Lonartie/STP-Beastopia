<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox fx:id="VBoxBeastDetail" maxHeight="300.0" maxWidth="300.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.beastopia.teaml.controller.ingame.BeastDetailController">
    <HBox alignment="CENTER">
        <ImageView fx:id="ImageViewAvatar" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
        <GridPane hgap="5.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <Label fx:id="name" />
            <Label fx:id="hp" GridPane.rowIndex="1" />
            <Label fx:id="speed" GridPane.rowIndex="2" />
            <Label fx:id="level" GridPane.columnIndex="1" />
            <Label fx:id="type" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="attack" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="experience" GridPane.columnIndex="2" />
            <Label fx:id="defense" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        </GridPane>
    </HBox>
    <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;">
        <TextArea fx:id="description" style="-fx-background-color: transparent; -fx-border-color: black;" wrapText="true" />
    </ScrollPane>
</VBox>
