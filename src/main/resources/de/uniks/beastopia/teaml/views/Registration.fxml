<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="de.uniks.beastopia.teaml.controller.auth.RegistrationController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="446.0" minWidth="10.0" percentWidth="30.0" prefWidth="235.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="549.0" minWidth="10.0" percentWidth="50.0" prefWidth="199.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="549.0" minWidth="10.0" percentWidth="20.0" prefWidth="549.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <VBox alignment="CENTER">
            <children>
                <ImageView fitHeight="177.0" fitWidth="200.0">
                    <image>
                        <Image url="@../assets/DeadBirdsSociety_Logo_tr.PNG"/>
                    </image>
                </ImageView>
                <ImageView fitHeight="62.0" fitWidth="200.0">
                    <image>
                        <Image url="@../assets/Lumnix_Logo_tr.png"/>
                    </image>
                </ImageView>
            </children>
            <padding>
                <Insets bottom="150.0"/>
            </padding>
        </VBox>
        <VBox alignment="CENTER" spacing="20.0" GridPane.columnIndex="1">
            <children>
                <VBox spacing="15.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%Language">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Text>
                        <HBox spacing="15.0">
                            <children>
                                <RadioButton mnemonicParsing="false" selected="true" text="%English">
                                    <font>
                                        <Font size="20.0"/>
                                    </font>
                                    <toggleGroup>
                                        <ToggleGroup fx:id="language"/>
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton mnemonicParsing="false" text="%German" toggleGroup="$language">
                                    <font>
                                        <Font size="20.0"/>
                                    </font>
                                </RadioButton>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox spacing="15.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%Username">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Text>
                        <TextField fx:id="usernameInput"/>
                    </children>
                </VBox>
                <VBox spacing="15.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%Password">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Text>
                        <PasswordField fx:id="passwordInput"/>
                    </children>
                </VBox>
                <VBox spacing="15.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%ConfirmPassword">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Text>
                        <PasswordField fx:id="passwordRepeatInput"/>
                    </children>
                </VBox>
                <HBox alignment="CENTER" spacing="45.0">
                    <children>
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#uploadAvatar" prefHeight="29.0"
                                prefWidth="138.0" style="-fx-background-radius: 20;" text="%UploadAvatar">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <ImageView fx:id="avatarImage" fitHeight="96.0" fitWidth="170.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../assets/Lumnix_Logo_tr.png"/>
                            </image>
                        </ImageView>
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="45.0">
                    <children>
                        <Button fx:id="signUpButton" defaultButton="true" mnemonicParsing="false" onAction="#signUp"
                                prefHeight="68.0" prefWidth="138.0" style="-fx-background-radius: 20;"
                                text="%SignUpButton">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Button>
                        <VBox>
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%AlreadyAccount">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Text>
                                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#switchToSignIn"
                                        style="-fx-background-color: transparent;" text="%SignIn" textFill="#0430c3"
                                        underline="true">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</GridPane>
