<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="VBoxShopList" alignment="CENTER" onKeyPressed="#handleKeyEvent" prefWidth="200.0" style="-fx-border-radius: 10; -fx-border-color: black;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.beastopia.teaml.controller.ingame.items.ShopController">
   <Label text="%shop">
      <font>
         <Font name="System Bold" size="22.0" />
      </font>
      <VBox.margin>
         <Insets top="15.0" />
      </VBox.margin>
   </Label>
   <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
      <VBox fx:id="VBoxItems" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </ScrollPane>
   <Button fx:id="CloseButtonTest" mnemonicParsing="false" onAction="#close" text="%leave">
      <VBox.margin>
         <Insets bottom="5.0" />
      </VBox.margin></Button>
</VBox>
