<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="VBoxMondexDetail" maxHeight="300.0" maxWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.beastopia.teaml.controller.ingame.mondex.MondexDetailController">
   <HBox alignment="CENTER">
         <GridPane>
           <columnConstraints>
             <ColumnConstraints hgrow="SOMETIMES" percentWidth="35.0" />
             <ColumnConstraints hgrow="SOMETIMES" percentWidth="35.0" />
               <ColumnConstraints hgrow="SOMETIMES" percentWidth="30.0" />
           </columnConstraints>
           <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>
               <Label fx:id="label_name" text="Name" />
               <ImageView fx:id="imageView_TypeIcon" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" />
               <Label fx:id="label_type" text="Type" GridPane.columnIndex="1" />
         </GridPane>
   </HBox>
   <HBox alignment="CENTER">
         <ImageView fx:id="imageView_Avatar" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
   </HBox>
    <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;">
        <TextArea fx:id="textArea_description" editable="false" focusTraversable="false" style="-fx-background-color: transparent; -fx-border-color: black;" wrapText="true" />
    </ScrollPane>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
