<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      onKeyPressed="#pauseMenu" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.beastopia.teaml.controller.menu.PauseController">
    <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="350.0"
          prefWidth="300.0">
        <VBox alignment="TOP_CENTER" maxWidth="200.0" minWidth="200.0" prefHeight="131.0" prefWidth="150.0"
              spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <HBox alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="180.0"
                  style="-fx-border-color: black; -fx-border-radius: 10;">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../assets/buttons/settings.png"/>
                </ImageView>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#settingsButtonPressed" prefWidth="200.0"
                        style="-fx-background-color: transparent; -fx-border-color: transparent;" text="%Settings"
                        textAlignment="CENTER" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
            </HBox>
            <HBox alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="180.0"
                  style="-fx-border-color: black; -fx-border-radius: 10;">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../assets/buttons/edit.png"/>
                </ImageView>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#editProfileButtonPressed"
                        prefWidth="200.0" style="-fx-background-color: transparent; -fx-border-color: transparent;"
                        text="%EditProfile" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
            </HBox>
            <HBox alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="180.0"
                  style="-fx-border-color: black; -fx-border-radius: 10;">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../assets/buttons/back.png"/>
                </ImageView>
                <!--suppress JavaFxUnresolvedFxIdReference -->
                <Button fx:id="mainMenuButton" alignment="CENTER" mnemonicParsing="false"
                        onAction="#mainMenuButtonPressed" prefWidth="200.0"
                        style="-fx-background-color: transparent; -fx-border-color: transparent;" text="%BackToMain"
                        HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
            </HBox>
            <HBox alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="180.0"
                  style="-fx-border-color: black; -fx-border-radius: 10;">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true"/>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#trainerMenuButtonPressed"
                        prefWidth="200.0" style="-fx-background-color: transparent; -fx-border-color: transparent;"
                        text="%TrainerMenu" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
            </HBox>
            <HBox alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="180.0"
                  style="-fx-border-color: black; -fx-border-radius: 10;">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../assets/buttons/beast.png"/>
                </ImageView>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#beastTeamButtonPressed" prefWidth="200.0"
                        style="-fx-background-color: transparent; -fx-border-color: transparent;" text="%BeastTeam"
                        HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
            </HBox>
        </VBox>
    </VBox>
    <VBox prefHeight="200.0" prefWidth="25.0" />
    <VBox fx:id="friendListContainer" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="285.0" style="-fx-border-color: black; -fx-border-width: 2;" />
</HBox>
