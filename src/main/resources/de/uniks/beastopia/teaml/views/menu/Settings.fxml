<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<HBox fx:id="backroundVbox" alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.uniks.beastopia.teaml.controller.menu.SettingsController">
    <padding>
        <Insets bottom="50.0" left="100.0" right="100.0" top="50.0"/>
    </padding>
    <VBox fx:id="innerVBox" alignment="CENTER" spacing="10.0">
        <HBox>
            <Label text="%Language">
                <font>
                    <Font size="16.0"/>
                </font>
            </Label>
        </HBox>
        <HBox alignment="CENTER" spacing="15.0">
            <RadioButton fx:id="selectEnglishLanguage" mnemonicParsing="false" onAction="#setEn" selected="true"
                         text="%English">
                <font>
                    <Font size="16.0"/>
                </font>
                <toggleGroup>
                    <ToggleGroup fx:id="language"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="selectGermanLanguage" mnemonicParsing="false" onAction="#setDe" text="%German"
                         toggleGroup="$language">
                <font>
                    <Font size="16.0"/>
                </font>
            </RadioButton>
        </HBox>
        <HBox>
            <Label text="%ChangeTheme">
                <font>
                    <Font size="16.0"/>
                </font>
            </Label>
        </HBox>
        <HBox alignment="CENTER" spacing="15.0">
            <RadioButton fx:id="darkRadioButton" mnemonicParsing="false" onAction="#setDarkTheme" selected="true"
                         text="%Dark">
                <font>
                    <Font size="16.0"/>
                </font>
                <toggleGroup>
                    <ToggleGroup fx:id="theme"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="lightRadioButton" mnemonicParsing="false" onAction="#setLightTheme" text="%Light"
                         toggleGroup="$theme">
                <font>
                    <Font size="16.0"/>
                </font>
            </RadioButton>
        </HBox>
        <HBox>
            <Label text="%MusicVolume">
                <font>
                    <Font size="16.0"/>
                </font>
            </Label>
        </HBox>
        <Slider fx:id="musicVolumeSlider" onMouseDragged="#changeMusicVolume"/>
        <HBox>
            <Label text="%SoundVolume">
                <font>
                    <Font size="16.0"/>
                </font>
            </Label>
        </HBox>
        <Slider fx:id="soundVolumeSlider" onMouseDragged="#changeSoundVolume"/>
        <Label text="%Keybinds" underline="true">
            <font>
                <Font name="System Bold Italic" size="16.0"/>
            </font>
        </Label>
        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER">
            <VBox fx:id="vboxKeybindings" spacing="10.0"/>
        </ScrollPane>
        <Button fx:id="backButton" mnemonicParsing="false" onAction="#back" text="%Back" VBox.vgrow="ALWAYS">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>
        <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
        </padding>
    </VBox>
</HBox>
