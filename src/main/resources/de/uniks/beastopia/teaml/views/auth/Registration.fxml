<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane prefHeight="650.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="de.uniks.beastopia.teaml.controller.auth.RegistrationController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="446.0" minWidth="10.0" percentWidth="29.0" prefWidth="235.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="549.0" minWidth="10.0" percentWidth="51.0" prefWidth="199.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="549.0" minWidth="10.0" percentWidth="20.0" prefWidth="549.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <VBox alignment="CENTER">
        <padding>
            <Insets bottom="150.0"/>
        </padding>
        <ImageView fitHeight="177.0" fitWidth="200.0">
            <Image url="@../../assets/DeadBirdsSociety_Logo_tr.PNG"/>
        </ImageView>
        <ImageView fitHeight="41.0" fitWidth="159.0">
            <Image url="@../../assets/Lumnix_Logo_tr.png"/>
        </ImageView>
    </VBox>
    <VBox alignment="TOP_CENTER" spacing="10.0" GridPane.columnIndex="1">
        <ImageView fx:id="banner" fitHeight="57.0" fitWidth="318.0" pickOnBounds="true" preserveRatio="true">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </ImageView>
        <VBox spacing="15.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%Language">
                <font>
                    <Font size="20.0"/>
                </font>
            </Text>
            <HBox spacing="15.0">
                <RadioButton fx:id="selectEnglishLanguage" mnemonicParsing="false" onAction="#setEn" selected="true"
                             text="%English">
                    <font>
                        <Font size="20.0"/>
                    </font>
                    <toggleGroup>
                        <!--suppress JavaFxUnresolvedFxIdReference -->
                        <ToggleGroup fx:id="language"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="selectGermanLanguage" mnemonicParsing="false" onAction="#setDe" text="%German"
                             toggleGroup="$language">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </RadioButton>
            </HBox>
        </VBox>
        <VBox spacing="15.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%Username">
                <font>
                    <Font size="20.0"/>
                </font>
            </Text>
            <TextField fx:id="usernameInput"/>
        </VBox>
        <VBox spacing="15.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%Password">
                <font>
                    <Font size="20.0"/>
                </font>
            </Text>
            <PasswordField fx:id="passwordInput"/>
        </VBox>
        <VBox spacing="15.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%ConfirmPassword">
                <font>
                    <Font size="20.0"/>
                </font>
            </Text>
            <PasswordField fx:id="passwordRepeatInput"/>
        </VBox>
        <HBox alignment="CENTER" prefHeight="119.0" prefWidth="398.0" spacing="45.0">
            <Button defaultButton="true" mnemonicParsing="false" onAction="#uploadAvatar" prefHeight="29.0"
                    prefWidth="138.0" style="-fx-background-radius: 20;" text="%UploadAvatar">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>
            <ImageView fx:id="avatarPreview" fitHeight="59.0" fitWidth="151.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../../assets/Lumnix_Logo_tr.png"/>
            </ImageView>
        </HBox>
        <HBox alignment="CENTER" spacing="45.0">
            <Button fx:id="signUpButton" defaultButton="true" mnemonicParsing="false" onAction="#signUp"
                    prefHeight="68.0" prefWidth="138.0" style="-fx-background-radius: 20;" text="%SignUpButton">
                <font>
                    <Font size="20.0"/>
                </font>
            </Button>
            <VBox>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%AlreadyAccount">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Text>
                <!--suppress JavaFxUnresolvedFxIdReference -->
                <Button fx:id="login" mnemonicParsing="false" onAction="#switchToSignIn"
                        style="-fx-background-color: transparent;" text="%SignIn" textFill="#0430c3" underline="true">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Button>
            </VBox>
        </HBox>
        <GridPane.margin>
            <Insets left="10.0"/>
        </GridPane.margin>
    </VBox>
</GridPane>
