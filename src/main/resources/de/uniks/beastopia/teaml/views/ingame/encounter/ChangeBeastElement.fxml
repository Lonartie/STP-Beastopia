                <Label fx:id="beastLabel" text="Label"/>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.rowIndex="1">
                    <children>
                        <ImageView fitHeight="26.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../assets/icons8-star-48.png"/>
                            </image>
                        </ImageView>
                        <ProgressBar fx:id="expProgress" prefHeight="20.0" prefWidth="68.0" progress="0.0">
                            <HBox.margin>
                                <Insets top="2.0"/>
                            </HBox.margin>
                        </ProgressBar>
                        <Button fx:id="addOrRemoveButton" mnemonicParsing="false" onAction="#addOrRemoveBeast"
                                prefHeight="20.0" prefWidth="20.0">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true"/>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</GridPane>
